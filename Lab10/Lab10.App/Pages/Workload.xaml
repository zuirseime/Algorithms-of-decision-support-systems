<Page x:Class="Lab10.App.Pages.Workload"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab10.App.Pages"
      xmlns:chart="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=DotNetProjects.DataVisualization.Toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Workload">

    <Grid>
        <TextBlock Text="Workload" FontSize="50" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray" Grid.RowSpan="2" Grid.ColumnSpan="2" />
        <chart:Chart x:Name="_chart">
            <chart:Chart.Axes>
                <chart:LinearAxis Interval="1" Orientation="X" ShowGridLines="True" />
                <chart:LinearAxis Interval="1" Orientation="Y" ShowGridLines="True" />
            </chart:Chart.Axes>
        </chart:Chart>
    </Grid>
</Page>
