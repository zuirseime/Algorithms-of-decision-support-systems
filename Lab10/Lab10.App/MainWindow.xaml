<Window x:Class="Lab10.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab10.App"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        FontFamily="Consolas" FontSize="14">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Tag="Home.xaml" Content="Home" Click="ChangePage" Margin="5" Padding="10 5" />
            <Button Tag="Schedule.xaml" Content="Schedule" Click="ChangePage" Margin="5" Padding="10 5" />
            <Button Tag="Workload.xaml" Content="Workload" Click="ChangePage" Margin="5" Padding="10 5" />
        </StackPanel>

        <Frame x:Name="_frame" Grid.Row="1" NavigationUIVisibility="Hidden" Margin="5" />
    </Grid>
</Window>
